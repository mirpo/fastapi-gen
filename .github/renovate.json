{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "on sunday"
  ],
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "osvVulnerabilityAlerts": true,
  "prConcurrentLimit": 50,
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions"
    },
    {
      "matchPackageNames": [
        "dev/ruff",
        "ruff"
      ],
      "groupName": "dev python tools"
    },
    {
      "matchPackageNames": [
        "langchain",
        "langchain-community"
      ],
      "groupName": "langchain deps"
    },
    {
      "matchPackageNames": [
        "llama-cpp-python"
      ],
      "groupName": "llama-cpp-python dep"
    },
    {
      "matchPackagePatterns": [
        "transformers"
      ],
      "groupName": "transformers dep"
    },
    {
      "matchPackagePatterns": [
        "pytest",
        "python-dotenv",
        "fastapi",
        "httpx",
        "importlib_resources",
        "pydantic-settings",
        "torch",
        "uvicorn",
        "click",
        "colorama"
      ],
      "groupName": "other python deps"
    }
  ]
}